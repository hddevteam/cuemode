{
  "name": "cuemode",
  "displayName": "%cuemode.displayName%",
  "description": "%cuemode.description%",
  "version": "2.7.0",
  "engines": {
    "vscode": "^1.82.0"
  },
  "icon": "images/icon.png",
  "publisher": "luckyXmobile",
  "categories": [
    "Other"
  ],
  "keywords": [
    "teleprompter",
    "presentation",
    "video recording",
    "auto-scroll",
    "content creation",
    "streaming",
    "tutorial",
    "education",
    "readability",
    "fullscreen",
    "markdown",
    "markdown parser",
    "formatted content",
    "documentation"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cuemode.cueMode",
        "title": "%cuemode.cueMode%"
      },
      {
        "command": "cuemode.changeTheme",
        "title": "%cuemode.changeTheme%"
      },
      {
        "command": "cuemode.removeLeadingSpaces",
        "title": "%cuemode.removeLeadingSpaces%"
      },
      {
        "command": "cuemode.toggleFocusMode",
        "title": "%cuemode.toggleFocusMode%"
      },
      {
        "command": "cuemode.toggleMirrorFlip",
        "title": "%cuemode.toggleMirrorFlip%"
      },
      {
        "command": "cuemode.toggleMarkdownMode",
        "title": "%cuemode.toggleMarkdownMode%"
      },
      {
        "command": "cuemode.configureMarkdownFeatures",
        "title": "%cuemode.configureMarkdownFeatures%"
      },
      {
        "command": "cuemode.adjustLineHeight",
        "title": "%cuemode.adjustLineHeight%"
      },
      {
        "command": "cuemode.increaseFontSize",
        "title": "%cuemode.increaseFontSize%"
      },
      {
        "command": "cuemode.decreaseFontSize",
        "title": "%cuemode.decreaseFontSize%"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "cuemode.cueMode",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "cuemode.cueMode",
        "key": "ctrl+shift+p",
        "mac": "cmd+shift+p",
        "when": "editorTextFocus"
      },
      {
        "command": "cuemode.changeTheme",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      },
      {
        "command": "cuemode.removeLeadingSpaces",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus"
      },
      {
        "command": "cuemode.toggleMirrorFlip",
        "key": "ctrl+shift+m",
        "mac": "cmd+shift+m",
        "when": "editorTextFocus"
      },
      {
        "command": "cuemode.toggleMarkdownMode",
        "key": "ctrl+shift+d",
        "mac": "cmd+shift+d",
        "when": "editorTextFocus"
      },
      {
        "command": "cuemode.adjustLineHeight",
        "key": "ctrl+shift+l",
        "mac": "cmd+shift+l",
        "when": "editorTextFocus"
      },
      {
        "command": "cuemode.increaseFontSize",
        "key": "ctrl+shift+=",
        "mac": "cmd+shift+=",
        "when": "editorTextFocus"
      },
      {
        "command": "cuemode.decreaseFontSize",
        "key": "ctrl+shift+-",
        "mac": "cmd+shift+-",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "%cuemode.configuration.title%",
      "properties": {
        "cuemode.colorTheme": {
          "type": "string",
          "default": "classic",
          "enum": [
            "classic",
            "inverted",
            "midnightBlue",
            "sunset",
            "forest",
            "ocean",
            "rose"
          ],
          "description": "%cuemode.configuration.colorTheme%"
        },
        "cuemode.maxWidth": {
          "type": "number",
          "default": 800,
          "minimum": 200,
          "maximum": 2000,
          "description": "%cuemode.configuration.maxWidth%"
        },
        "cuemode.fontSize": {
          "type": "number",
          "default": 24,
          "minimum": 8,
          "maximum": 100,
          "description": "%cuemode.configuration.fontSize%"
        },
        "cuemode.lineHeight": {
          "type": "number",
          "default": 1.5,
          "minimum": 0.5,
          "maximum": 5,
          "description": "%cuemode.configuration.lineHeight%"
        },
        "cuemode.padding": {
          "type": "number",
          "default": 10,
          "minimum": 0,
          "maximum": 100,
          "description": "%cuemode.configuration.padding%"
        },
        "cuemode.scrollSpeed": {
          "type": "number",
          "default": 0.1,
          "minimum": 0.01,
          "maximum": 1,
          "description": "%cuemode.configuration.scrollSpeed%"
        },
        "cuemode.startingPosition": {
          "type": "number",
          "default": 50,
          "minimum": 0,
          "maximum": 100,
          "description": "%cuemode.configuration.startingPosition%"
        },
        "cuemode.focusMode": {
          "type": "boolean",
          "default": false,
          "description": "%cuemode.configuration.focusMode%"
        },
        "cuemode.focusOpacity": {
          "type": "number",
          "default": 0.3,
          "minimum": 0.1,
          "maximum": 0.8,
          "description": "%cuemode.configuration.focusOpacity%"
        },
        "cuemode.focusLineCount": {
          "type": "number",
          "default": 3,
          "minimum": 1,
          "maximum": 10,
          "description": "%cuemode.configuration.focusLineCount%"
        },
        "cuemode.mirrorFlip": {
          "type": "boolean",
          "default": false,
          "description": "%cuemode.configuration.mirrorFlip%"
        },
        "cuemode.markdownMode": {
          "type": "boolean",
          "default": false,
          "description": "%cuemode.configuration.markdownMode%"
        },
        "cuemode.markdownFeatures": {
          "type": "object",
          "default": {
            "headers": true,
            "emphasis": true,
            "lists": true,
            "links": false,
            "code": true,
            "blockquotes": true,
            "tables": true,
            "taskLists": true,
            "strikethrough": false,
            "horizontalRule": true
          },
          "properties": {
            "headers": {
              "type": "boolean",
              "default": true,
              "description": "%cuemode.configuration.markdownFeatures.headers%"
            },
            "emphasis": {
              "type": "boolean",
              "default": true,
              "description": "%cuemode.configuration.markdownFeatures.emphasis%"
            },
            "lists": {
              "type": "boolean",
              "default": true,
              "description": "%cuemode.configuration.markdownFeatures.lists%"
            },
            "links": {
              "type": "boolean",
              "default": false,
              "description": "%cuemode.configuration.markdownFeatures.links%"
            },
            "code": {
              "type": "boolean",
              "default": true,
              "description": "%cuemode.configuration.markdownFeatures.code%"
            },
            "blockquotes": {
              "type": "boolean",
              "default": true,
              "description": "%cuemode.configuration.markdownFeatures.blockquotes%"
            },
            "tables": {
              "type": "boolean",
              "default": true,
              "description": "%cuemode.configuration.markdownFeatures.tables%"
            },
            "taskLists": {
              "type": "boolean",
              "default": true,
              "description": "%cuemode.configuration.markdownFeatures.taskLists%"
            },
            "strikethrough": {
              "type": "boolean",
              "default": false,
              "description": "%cuemode.configuration.markdownFeatures.strikethrough%"
            },
            "horizontalRule": {
              "type": "boolean",
              "default": true,
              "description": "%cuemode.configuration.markdownFeatures.horizontalRule%"
            }
          },
          "description": "%cuemode.configuration.markdownFeatures%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run clean && npm run esbuild && npm run copy-resources",
    "esbuild": "esbuild src/extension.ts --bundle --outfile=out/extension.js --external:vscode --format=cjs --platform=node",
    "clean": "rm -rf out && mkdir -p out",
    "compile": "tsc -p ./ && npm run copy-resources",
    "copy-resources": "mkdir -p out/locales && cp src/locales/*.json out/locales/",
    "optimize": "npm run clean-out && npm run minify",
    "clean-out": "find out -name '*.js' -exec sed -i '' '/\\/\\*\\*\\|^ \\*\\|^ \\*\\/\\|^\\s*console\\.log/d' {} + || true",
    "minify": "echo 'Minification complete'",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:unit": "mocha out/test/suite/**/*.test.js",
    "test:integration": "node ./out/test/runTest.js",
    "package": "npm run vscode:prepublish && vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/test-electron": "^2.3.4",
    "@vscode/vsce": "^2.19.0",
    "esbuild": "^0.25.6",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hddevteam/cuemode.git"
  },
  "dependencies": {
    "i18next": "^25.3.2"
  }
}
