{
  "name": "cuemode",
  "displayName": "%cuemode.displayName%",
  "description": "%cuemode.description%",
  "version": "2.0.0",
  "engines": {
    "vscode": "^1.82.0"
  },
  "icon": "images/icon.png",
  "publisher": "luckyXmobile",
  "categories": [
    "Other"
  ],
  "keywords": [
    "teleprompter",
    "presentation",
    "video recording",
    "auto-scroll",
    "content creation",
    "streaming",
    "tutorial",
    "education",
    "readability",
    "fullscreen"
  ],
  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cuemode.cueMode",
        "title": "%cuemode.cueMode%"
      },
      {
        "command": "cuemode.changeTheme",
        "title": "%cuemode.changeTheme%"
      },
      {
        "command": "cuemode.removeLeadingSpaces",
        "title": "%cuemode.removeLeadingSpaces%"
      }
    ],
    "menus": {
      "editor/context": [
        {
          "command": "cuemode.cueMode",
          "group": "navigation"
        }
      ]
    },
    "keybindings": [
      {
        "command": "cuemode.cueMode",
        "key": "ctrl+shift+p",
        "mac": "cmd+shift+p",
        "when": "editorTextFocus"
      },
      {
        "command": "cuemode.changeTheme",
        "key": "ctrl+shift+t",
        "mac": "cmd+shift+t",
        "when": "editorTextFocus"
      },
      {
        "command": "cuemode.removeLeadingSpaces",
        "key": "ctrl+shift+r",
        "mac": "cmd+shift+r",
        "when": "editorTextFocus"
      }
    ],
    "configuration": {
      "title": "%cuemode.configuration.title%",
      "properties": {
        "cuemode.colorTheme": {
          "type": "string",
          "default": "classic",
          "enum": [
            "classic",
            "inverted",
            "midnightBlue",
            "sunset",
            "forest",
            "ocean",
            "rose"
          ],
          "description": "%cuemode.configuration.colorTheme%"
        },
        "cuemode.maxWidth": {
          "type": "number",
          "default": 800,
          "minimum": 200,
          "maximum": 2000,
          "description": "%cuemode.configuration.maxWidth%"
        },
        "cuemode.fontSize": {
          "type": "number",
          "default": 24,
          "minimum": 8,
          "maximum": 100,
          "description": "%cuemode.configuration.fontSize%"
        },
        "cuemode.lineHeight": {
          "type": "number",
          "default": 1.5,
          "minimum": 0.5,
          "maximum": 5,
          "description": "%cuemode.configuration.lineHeight%"
        },
        "cuemode.padding": {
          "type": "number",
          "default": 10,
          "minimum": 0,
          "maximum": 100,
          "description": "%cuemode.configuration.padding%"
        },
        "cuemode.scrollSpeed": {
          "type": "number",
          "default": 0.1,
          "minimum": 0.01,
          "maximum": 1,
          "description": "%cuemode.configuration.scrollSpeed%"
        },
        "cuemode.startingPosition": {
          "type": "number",
          "default": 50,
          "minimum": 0,
          "maximum": 100,
          "description": "%cuemode.configuration.startingPosition%"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js",
    "test:unit": "mocha out/test/suite/**/*.test.js",
    "test:integration": "node ./out/test/runTest.js",
    "package": "vsce package"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.1",
    "@types/node": "16.x",
    "@types/vscode": "^1.82.0",
    "@typescript-eslint/eslint-plugin": "^6.21.0",
    "@typescript-eslint/parser": "^6.21.0",
    "@vscode/test-electron": "^2.3.4",
    "@vscode/vsce": "^2.19.0",
    "eslint": "^8.47.0",
    "glob": "^10.3.3",
    "mocha": "^10.2.0",
    "typescript": "^5.1.6"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/hddevteam/cuemode.git"
  }
}
